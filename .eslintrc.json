{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "plugin:cypress/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest"
    ],
    "rules": {
        "react/jsx-filename-extension": [0] ,
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
    },
    "ignorePatterns": [
        "/server", 
        "**/vendor/*.js",
        ".gitignore",
        "serviceWorker.js",
        "/cypress"
    ]
}
